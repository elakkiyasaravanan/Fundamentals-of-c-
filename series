    cout<<a<<" ";
    for(int i=1;i<n;i++)
    {
        cout<<(a=((a+(2*i))+1))<<" ";
    }
}
//Write a program to generate the following series – 2, 4, 7, 12, 21…..
#include<iostream>
using namespace std;
int main()
{
     int n,a=2,b;
     cin>>n;
     cout<<a<<" ";
     for(int i=0;i<=(n-1);i++)
     {
         a=(a*2)-i;
         cout<<a<<" ";
     }
        return 0;
}
//Write a program to generate the following series - 1, 4, 27, 256….
#include<iostream>
#include<math.h>
using namespace std;
int main()
{
     int n,a;
     cin>>n;
   
     for(int i=1;i<=n;i++)
     {
         a=pow(i,i);
         cout<<a<<" ";
     }
        return 0;
}
//Write a program to generate the following series – 10, 5, 60, 15, 110….
#include<iostream>
using namespace std;
int main()
{
    int n,a=10,b=5;
    cin>>n;cout<<a<<" "<<b<<" ";
    for(int i=0;i<n;i++)
    {
        if(i%2==0)
        {
            a=(a+50);
          cout<<a<<" ";
        }
        else
        {
            b=(b+10);
            cout<<b<<" ";
        }
    }
}
//Write a program to generate the first n terms in the series 121,225,361,...
#include<iostream>
#include<math.h>
using namespace std;
int main ()
{
    int n,b,c,a=11;
    cin>>n;
    c=pow(a,2);
    cout<<c<<" ";
    for(int i=2;i<=n;i++)
    {
      a=a+4;
      b=pow(a,2);
      cout<<b<<" ";
    }
}
//Write a  program to generate the following series – 0, 2, 6, 12, 20…..
#include<iostream>
using namespace std;
int main()
{
    int n,a;
    cin>>n;
    for(int i=0;i<n;i++)
    {
      a=(i*i)+i;
      cout<<a<<" ";
    }
}
//Write a program to generate the following series – 1, 4, 27, 16, 125….
#include<iostream>
using namespace std;
int main()
{
     int n,b,c;cin>>n;

     for(int i=1;i<=n;i++)
     {
         if(i%2!=0)
         {
             b=(i*i*i);
             cout<<b<<" ";
         }
         else
         {
             c=(i*i);
             cout<<c<<" ";
         }
     }
        return 0;
}
//Write a program to generate the first n terms in the series 
0.5,1.5,4.5,13.5,...
#include<iostream>
#include<iomanip>
#include<math.h>
using namespace std;
int main()
{
    int d,n;
    cin>>d;
    float a=0.5,b=1.5,c;
    cout<<a<<" "<<b<<" ";
    for(int i=1;i<=d-2;i++)
    {
     n=pow(3,i);
     c=b+n;
     cout<<fixed<<setprecision(1)<<c<<" ";
     b=c;
    }
    
    
}
//Write a program to generate the first n terms in the series.
0,2,8,14,...,34
#include<iostream>
#include<math.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        if(i%2 == 0)
        {
            cout<<(pow(i,2)-2)<<" ";
        }
        else
        {
            cout<<(pow(i,2)-1)<<" ";
        }
       
    }
}

